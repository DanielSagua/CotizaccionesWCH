{% extends "layouts/main.njk" %}
{% set title = "Admin - Usuarios" %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-3">
  <div>
    <h1 class="h4 mb-0">Usuarios</h1>
    <div class="text-muted small">Total: {{ total }}</div>
  </div>
  <a class="btn btn-primary" href="/admin/users/nuevo">Nuevo usuario</a>
</div>

<form class="card card-body mb-3" method="get" action="/admin/users">
  <div class="row g-2">
    <div class="col-12 col-md-4">
      <input class="form-control" name="q" placeholder="Buscar (username/nombre/correo)" value="{{ filtros.q or '' }}">
    </div>
    <div class="col-12 col-md-3">
      <select class="form-select" name="rol">
        <option value="">Rol (todos)</option>
        {% for r in ["VENDEDOR","JEFE","ANALISTA","ADMIN"] %}
          <option value="{{ r }}" {% if filtros.rol == r %}selected{% endif %}>{{ r }}</option>
        {% endfor %}
      </select>
    </div>
    <div class="col-12 col-md-2">
      <select class="form-select" name="estado">
        <option value="">Estado (todos)</option>
        <option value="1" {% if filtros.estado == "1" %}selected{% endif %}>Activo</option>
        <option value="0" {% if filtros.estado == "0" %}selected{% endif %}>Inactivo</option>
      </select>
    </div>
    <div class="col-12 col-md-3 d-flex gap-2">
      <select class="form-select" name="pageSize">
        {% for s in [10,20,50,100] %}
          <option value="{{ s }}" {% if filtros.pageSize == s %}selected{% endif %}>{{ s }} / p치g</option>
        {% endfor %}
      </select>
      <button class="btn btn-primary">Filtrar</button>
      <a class="btn btn-outline-secondary" href="/admin/users">Limpiar</a>
    </div>
  </div>
</form>

<div class="card shadow-sm">
  <div class="table-responsive">
    <table class="table table-hover mb-0">
      <thead class="table-light">
        <tr>
          <th>ID</th>
          <th>Username</th>
          <th>Nombre</th>
          <th>Correo</th>
          <th>Rol</th>
          <th>Estado</th>
          <th class="text-end">Acciones</th>
        </tr>
      </thead>
      <tbody>
        {% for r in rows %}
          <tr>
            <td>{{ r.id_user }}</td>
            <td class="fw-semibold">{{ r.username }}</td>
            <td>{{ r.nombre }}</td>
            <td>{{ r.correo or '-' }}</td>
            <td><span class="badge text-bg-secondary">{{ r.rol }}</span></td>
            <td>
              {% if r.estado %}
                <span class="badge text-bg-success">Activo</span>
              {% else %}
                <span class="badge text-bg-danger">Inactivo</span>
              {% endif %}
            </td>
            <td class="text-end">
              <a class="btn btn-outline-primary btn-sm" href="/admin/users/{{ r.id_user }}/editar">Editar</a>

              <form method="post" action="/admin/users/{{ r.id_user }}/toggle" class="d-inline">
                <button class="btn btn-outline-secondary btn-sm">
                  {% if r.estado %}Desactivar{% else %}Activar{% endif %}
                </button>
              </form>

              <button class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#resetModal{{ r.id_user }}">
                Reset Pass
              </button>

              <!-- Modal reset pass -->
              <div class="modal fade" id="resetModal{{ r.id_user }}" tabindex="-1">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <form method="post" action="/admin/users/{{ r.id_user }}/reset-pass" class="needs-validation" novalidate>
                      <div class="modal-header">
                        <h5 class="modal-title">Reset Password</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                      </div>
                      <div class="modal-body">
                        <div class="mb-2">
                          <div class="text-muted small">Usuario: <b>{{ r.username }}</b></div>
                        </div>
                        <input class="form-control" name="new_password" type="password" minlength="8" required placeholder="Nueva contrase침a (min 8)">
                        <div class="invalid-feedback">Ingresa una contrase침a v치lida.</div>
                      </div>
                      <div class="modal-footer">
                        <button class="btn btn-outline-secondary" type="button" data-bs-dismiss="modal">Cancelar</button>
                        <button class="btn btn-danger">Reset</button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>

            </td>
          </tr>
        {% else %}
          <tr><td colspan="7" class="text-center text-muted py-4">Sin resultados</td></tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>
{% endblock %}
